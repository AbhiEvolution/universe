<div class="container mt-4">
  <div class="row d-flex justify-content-center text-center">
    <div class="col-md-9 ">
      <div class="card">
        <div class="card-body">
          <div class="card-text text-danger"><%=@message.body %></div>
          <span class="badge rounded-pill bg-info text-dark">Created <%=time_ago_in_words @message.created_at %> ago,</span>
          <span class="badge rounded-pill bg-info text-dark">updated <%=time_ago_in_words @message.updated_at %> ago</span>
          <span class="d-flex justify-content-center mt-2">
            <%= link_to edit_message_path(@message), class:"btn btn-outline-warning mx-2" do %>
              Edit
            <%end%>
            <%= button_to 'Delete',  message_path(@message),  method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-danger" %>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
