<div class="container mt-5">
  <h1 class="text-center m-2">Category:  
    <%= @category.name%></h1>
  <%= render partial: 'categories/category', locals: { category: @category} %>
  <% @category.articles.each do |category| %>
    <%= render partial: 'articles/article', locals: {article: category} %>
  <% end %>
</div>
