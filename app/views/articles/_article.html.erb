<div class="container mt-5">
  <div class="row d-flex justify-content-center ">
    <div class="col-md-8">
      <div class="card text-center">
        <div class="card-header">
        <% if article.user.username %>
          by <em><%= link_to article.user.username, article.user, class:"text-decoration-none text-muted" %></em>
        </div>
        <% end %>
        <div class="card-body">
          <h5 class="card-title text-success"><%= article.title %></h5>
          <p class="card-text"><%= article.description %></p>
          <span class="d-flex justify-content-center">
          <% unless params[:controller] == 'articles' && params[:action] == 'show' %>
            <%= link_to 'View', article_path(article), class:"btn btn-outline-success mx-2" %>
          <% end %>
          <% if (current_user.id == article.user.id) || current_user.admin? %>
            <%= link_to 'Edit', edit_article_path(article), class:"btn btn-outline-info mx-2" %>
            <%= button_to 'Delete',  article_path(article),  method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-danger" %>
          <% end %>
          </span>
        </div>
        <div class="card-footer text-muted">
          Created <%=time_ago_in_words article.created_at %> ago,
          updated <%=time_ago_in_words article.updated_at %> ago
        </div>
      </div>
    </div>
  </div>
</div>
